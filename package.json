{
  "name": "gint",
  "version": "1.0.0",
  "description": "Linter for Git",
  "main": "./src/index.js",
  "bin": {
    "gint": "./bin/gint.js"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "nodemon --watch src --exec tsc",
    "prettier": "prettier --write 'src/**/*.js'",
    "lint": "tsc && tslint -c tslint.json 'src/**/*.js' --format stylish",
    "lint:watch": "nodemon --watch src --exec yarn lint",
    "test": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hvihvi/gint.git"
  },
  "keywords": [
    "git",
    "lint"
  ],
  "author": "hvihvi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hvihvi/gint/issues"
  },
  "homepage": "https://github.com/hvihvi/gint#readme",
  "devDependencies": {
    "eslint": "^5.10.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "jest": "^23.6.0",
    "nodemon": "^1.18.7",
    "prettier": "^1.15.3",
    "tsc": "^1.20150623.0",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.2.2"
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "find-project-root": "^1.1.1",
    "minimatch": "^3.0.4"
  }
}
